
case $(hostname) in
    crozier-mug)
        which cmgui &> /dev/null && alias cmgui="UBUNTU_MENUPROXY= LD_LIBRARY_PATH=/usr/local/libpng-fix/lib:$LD_LIBRARY_PATH cmgui"
        ;;
    *)
        which cmgui &> /dev/null && alias cmgui="UBUNTU_MENUPROXY= cmgui"
        ;;
esac

if [ -n "$CM2CARP_ROOT" ]; then
    alias residualPV=$CM2CARP_ROOT/scripts/active/residualPV.py
    alias ptool=$CM2CARP_ROOT/scripts/pressure/ptool.py
    alias cmguipreview=$CM2CARP_ROOT/viz/cmguipreview
fi

alias syncsim="rsync -av --include=\"*/\" --include=\"*.json\" --include=\"*cycle_PV.txt\" --exclude=\"*\""
alias syncex="rsync -av --include=\"*/\" --include=\"*.ex*\"  --exclude=\"*\""
alias gtop="watch -n 0.5 nvidia-smi"

# Machine specific
case $(hostname) in
    crozier-pc)
        alias ex2ip=/home/acroz/experimental/cmgui/ex2ip
        ;;
    crozier-mug)
        alias spiderview=$HOME/software/tarantula/Tarantula2.0/bin/linux64/viewer_14032008
        ;;
esac

# OS Specific
case $(uname) in
    Darwin)
        alias ctags=$(brew --prefix)/bin/ctags
        ;;
esac
